@model List<MIS_Healthcare.UI.DTOs.Appointment.AppointmentToRead>

@{
    ViewBag.Title = "Dashboard";
}

<h2>Appointments Dashboard</h2>

<div class="row">
    @foreach (var appointment in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Doctor: @appointment.DoctorName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Patient: @appointment.PatientName</h6>
                    <p class="card-text">
                        Date: @appointment.AppointmentDate.ToString("yyyy-MM-dd") <br />
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Create", "Appointments")" class="btn btn-primary">Create New Appointment</a>
</div>
